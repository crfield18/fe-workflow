# load the AMBER force fields
source leaprc.protein.ff14SB
source leaprc.gaff2
source leaprc.water.tip4pew
loadamberparams frcmod.ff14SB
loadamberparams frcmod.tip4pew
loadAmberParams frcmod.ionsjc_tip4pew
loadoff tip4pewbox.off


# load force field parameters for ligand
loadamberparams 1h1q_com_dry.frcmod
loadoff 1h1q_com_dry.lib

# load the coordinates and create the complex
complex = loadPdb 1h1q_com_dry.pdb

# create complex in solution for vdw+bonded transformation
solvateBox complex TIP4PEWBOX 15
addions complex Na+ 0
addions complex Cl- 0

#savepdb complex 1h1q_com_dry-solv.pdb
saveamberparm complex 1h1q_com_dry-solv.parm7 1h1q_com_dry-solv.rst7

quit
